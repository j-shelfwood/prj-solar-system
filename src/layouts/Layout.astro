---
import "@/css/app.css";

interface Props {
  title?: string;
}

const { title = "Mathematics Visualization" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main
      class="fixed inset-0 w-screen h-screen overflow-hidden bg-primary flex items-center justify-center"
    >
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @reference "@/css/app.css";

  html {
    @apply antialiased;
  }

  body {
    @apply bg-black text-secondary min-h-screen font-mono;
  }
</style>
